<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_news_title"
        android:layout_marginTop="8dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/text_view_news_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_news_date"
        android:text="编辑："
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_view_news_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_news_date"
        android:layout_toRightOf="@+id/text_view_news_editor" />

</RelativeLayout>