<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_end"
    android:orientation="horizontal"
    android:background="?attr/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#817b7b" />

        <ImageView
            android:id="@+id/image_view_tab_news_selected"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/tab_news_selected"/>

        <TextView
            android:id="@+id/text_view_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新闻"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:layout_below="@id/image_view_tab_news_selected"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#817b7b" />

        <ImageView
            android:id="@+id/image_view_tab_mine"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/tab_mine"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/text_view_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@id/image_view_tab_mine"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:text="我的"/>

    </RelativeLayout>

</LinearLayout>